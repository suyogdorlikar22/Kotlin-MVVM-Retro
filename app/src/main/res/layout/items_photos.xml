    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15dp"
        android:padding="5dp"
        android:textColor="#000000"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvUsertype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15dp"
        android:padding="5dp"
        android:textColor="#000000"
        android:gravity="center"/>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:padding="5dp"
        android:textColor="#000000"
        android:gravity="center"/>
